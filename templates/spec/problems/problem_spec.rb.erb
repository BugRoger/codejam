require 'problems/<%= name.underscore %>'

describe <%= name.classify %> do
  let(:output) { double ('output').as_null_object }
  
  it "should solve test.in and return content of test.out" do
    CodeJam.stub(:output).and_return(output)

    File.readlines("data/<%= name.underscore %>/test.out").each do |line|
      output.should_receive(:puts).with(line.chomp)
    end

    <%= name.classify %>.new("data/<%= name.underscore %>/test.in")
  end
end
